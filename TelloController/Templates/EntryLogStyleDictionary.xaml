<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SendTypeRowStyle" TargetType="DataGridRow"
       BasedOn="{StaticResource MetroDataGridRow}">
        <Setter Property="Background" Value="#80149414"/>
    </Style>
    <Style x:Key="ReceiveTypeRowStyle" TargetType="DataGridRow"
       BasedOn="{StaticResource MetroDataGridRow}">
        <Setter Property="Background" Value="#80184F96"/>
    </Style>
    <Style x:Key="LocalTypeRowStyle" TargetType="DataGridRow"
       BasedOn="{StaticResource MetroDataGridRow}">
        <Setter Property="Background" Value="#7F747474"/>
    </Style>
    <Style x:Key="ErrorTypeRowStyle" TargetType="DataGridRow"
       BasedOn="{StaticResource MetroDataGridRow}">
        <Setter Property="Background" Value="#808B0000"/>
    </Style>
</ResourceDictionary>